<p id="notice"><%= notice %></p>

<h1>Listing Firework Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firework_comments.each do |firework_comment| %>
      <tr>
        <td><%= firework_comment.comment %></td>
        <td><%= link_to 'Show', firework_comment %></td>
        <td><%= link_to 'Edit', edit_firework_comment_path(firework_comment) %></td>
        <td><%= link_to 'Destroy', firework_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

