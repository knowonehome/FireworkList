<h1>Listing firework_details</h1>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Purchased</th>
      <th>Firework</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firework_details.each do |firework_detail| %>
      <tr>
        <td><%= firework_detail.cost %></td>
        <td><%= firework_detail.purchased %></td>
        <td><%= firework_detail.firework.name %></td>
        <td><%= link_to 'Show', firework_detail %></td>
        <td><%= link_to 'Edit', edit_firework_detail_path(firework_detail) %></td>
        <td><%= link_to 'Destroy', firework_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

