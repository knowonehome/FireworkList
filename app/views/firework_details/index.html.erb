<h1>Listing firework_details</h1>
<div class="media">
  <div class"media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Cost</th>
          <th>Purchased</th>
          <th>Firework</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @firework_details.each do |firework_detail| %>
          <tr>
            <td><%= firework_detail.cost %></td>
            <td><%= firework_detail.purchased %></td>
            <td><%= firework_detail.firework.name %></td>
            <td><%= link_to 'Show', firework_detail, class: 'btn btn-sm btn-default' %></td>
            <td><%= link_to 'Edit', edit_firework_detail_path(firework_detail), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to 'Destroy', firework_detail, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Firework detail', new_firework_detail_path, class: 'btn btn-sm btn-info' %>